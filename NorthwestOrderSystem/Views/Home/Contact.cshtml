@model NorthwestOrderSystem.Models.Company
@{
    ViewBag.Title = "Contact";
}
<h2>Contact</h2>
<div class="jumbotron">
    Phone: 801-999-9999
    <br />
    Email: northwestlabs@nwl.com
    <br />
    Hours of business
    <ul>
        <li>Monday: 8:00 - 5:00</li>
        <li>Tuesday: 8:00 - 5:00</li>
        <li>Wednesday: 8:00 - 5:00</li>
        <li>Thursday: 8:00 - 5:00</li>
        <li>Friday: 8:00 - 5:00</li>
        <li>Closed: Saturday, Sunday</li>
    </ul>
</div>
<ul>
