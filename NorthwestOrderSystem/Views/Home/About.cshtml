@model IEnumerable<NorthwestOrderSystem.Models.Assay>

@{
    ViewBag.Title = "About";
}

<h2>About</h2>

<div class="jumbotron">
    <p>
        This can contain some basic info about the company, as well as an explanation of the list below.
        (The list below is a list of the tests we perform, as well as the base price for each)
    </p>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShortDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasePrice)
        </th>
        <th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShortDesc)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.BasePrice)
        </td>
    </tr>
}

</table>
